- var pages = []
- pages.push({url:'getting-started/index.html', title:'Getting Started'})
- pages.push({url:'style-reference/index.html', title:'Style Reference'})
- pages.push({url:'dev-reference/index.html', title:'Developer Reference'})
- pages.push({url:'transition-guide/index.html', title:'1.0 to 2.0 Transition Guide'})

mixin nav(pages, current_page)
  nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar

      .navbar-brand
        a.logo-docs(href='#{rootURL}/index.html')
          span.pixate-logo-dark Pixate
          span.logo-docs Docs

    - if (current_page)
      .collapse.navbar-collapse.navbar-ex1-collapse
        ul.nav.navbar-nav
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              span=current_page.title
              span <b class='caret'></b>
            ul.dropdown-menu
              - for (var i = 0 ; i < pages.length ; i++)
                  - if (pages[i].url != current_page.url)
                    li: a(href='#{rootURL}/'+pages[i].url)=pages[i].title



